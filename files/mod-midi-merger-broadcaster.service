[Unit]
Description=JACK MIDI Merger Broadcaster (internal client)
Requires=jack.service
After=jack.service

[Service]
User=pistomp
Environment="JACK_PROMISCUOUS_SERVER=jack"
ExecStart=/usr/bin/jack_load mod-midi-merger-broadcaster
ExecStop=/usr/bin/jack_unload mod-midi-merger-broadcaster
RemainAfterExit=yes
Type=oneshot
Restart=no

[Install]
WantedBy=multi-user.target
